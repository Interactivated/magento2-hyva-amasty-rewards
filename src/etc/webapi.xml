<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
<!--Frontend-->
    <!--Amount Management-->
    <route url="/V1/hyva-rewards/mine/amount/use" method="POST">
        <service class="Hyva\AmastyRewards\Api\AmountManagementInterface" method="usePoints"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>
    <!--/Amount Management-->
<!--/Frontend-->
</routes>
